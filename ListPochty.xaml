<Page x:Class="OnlainPochta.ListPochty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OnlainPochta"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPochty">

    <Grid>
        <ListBox x:Name="Messages" Foreground="#DAD7CD" Background="LightGray"  MouseDoubleClick="DoubleClickListBox" MenuItem.Click="MessagesLbx_Click" Margin="0,0,461,-50" >
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="Open" Header="Открыть" MenuItem.Click="MessagesLbx_Click" />
                    <MenuItem Name="Otvet" Header="Ответить" MenuItem.Click="MessagesLbx_Click" />
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </Grid>
</Page>
